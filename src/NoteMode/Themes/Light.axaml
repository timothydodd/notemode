<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ae="using:AvaloniaEdit"
        xmlns:avaloniaedit="https://github.com/avaloniaui/avaloniaedit"
        x:Class="NoteMode.Themes.LightTheme">

    <Styles.Resources>
        <SolidColorBrush x:Key="TitleBarBackground" Color="#f0f0f0"/>
        <SolidColorBrush x:Key="TitleBarForeground" Color="#1e1e1e"/>
        <SolidColorBrush x:Key="StatusBarText" Color="#666666"/>
        <SolidColorBrush x:Key="StatusBarSeparator" Color="#c8c8c8"/>
        <SolidColorBrush x:Key="StatusBarInputBackground" Color="#ffffff"/>
        <SolidColorBrush x:Key="StatusBarInputBorder" Color="#c8c8c8"/>
        <SolidColorBrush x:Key="DragHandleColor" Color="#858585"/>
        <SolidColorBrush x:Key="DragGhostBackground" Color="#ffffff"/>
        <SolidColorBrush x:Key="DragGhostBorder" Color="#0078d4"/>
        <SolidColorBrush x:Key="DragGhostForeground" Color="#1e1e1e"/>
        <SolidColorBrush x:Key="WindowControlHover" Color="#d4d4d4"/>
        <!-- Dialog resources -->
        <SolidColorBrush x:Key="AccentColor" Color="#0078d4"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#666666"/>
        <SolidColorBrush x:Key="WarningColor" Color="#d83b01"/>
        <!-- Tab strip resources -->
        <SolidColorBrush x:Key="TabStripBackground" Color="#e8e8e8"/>
        <SolidColorBrush x:Key="TabItemBackground" Color="#e8e8e8"/>
        <SolidColorBrush x:Key="TabItemHover" Color="#d4d4d4"/>
        <SolidColorBrush x:Key="TabItemSelected" Color="#ffffff"/>
        <SolidColorBrush x:Key="TabItemSelectedText" Color="#1e1e1e"/>
        <SolidColorBrush x:Key="TabItemText" Color="#666666"/>
        <SolidColorBrush x:Key="NewTabButtonBackground" Color="#d8d8d8"/>
        <SolidColorBrush x:Key="NewTabButtonHover" Color="#c8c8c8"/>
        <!-- Search panel resources -->
        <SolidColorBrush x:Key="SearchPanelBackground" Color="#f3f3f3"/>
        <SolidColorBrush x:Key="SearchPanelBorder" Color="#c8c8c8"/>
        <SolidColorBrush x:Key="SearchPanelHeaderBackground" Color="#e8e8e8"/>
        <SolidColorBrush x:Key="SearchPanelHeaderText" Color="#1e1e1e"/>
        <SolidColorBrush x:Key="SearchMatchHighlight" Color="#ffcc66"/>
        <SolidColorBrush x:Key="SearchModeButtonActive" Color="#d4d4d4"/>
        <SolidColorBrush x:Key="SearchModeButtonInactive" Color="#e8e8e8"/>
        <!-- Note tab border -->
        <SolidColorBrush x:Key="NoteTabBorderColor" Color="#c8960c"/>
        <!-- Notes panel resources -->
        <SolidColorBrush x:Key="NotesPanelBackground" Color="#f3f3f3"/>
        <SolidColorBrush x:Key="NotesPanelBorder" Color="#c8c8c8"/>
        <SolidColorBrush x:Key="NotesPanelHeaderBackground" Color="#e8e8e8"/>
        <SolidColorBrush x:Key="NotesPanelHeaderText" Color="#1e1e1e"/>
        <SolidColorBrush x:Key="NotesFolderIcon" Color="#666666"/>
        <SolidColorBrush x:Key="NotesNoteIcon" Color="#666666"/>
        <SolidColorBrush x:Key="NotesDropTargetHighlight" Color="#3a0078d4"/>
        <!-- Icon colors -->
        <SolidColorBrush x:Key="MenuIconColor" Color="#666666"/>
        <SolidColorBrush x:Key="TabCloseIconColor" Color="#1e1e1e"/>
    </Styles.Resources>

    <Style Selector="Window">
        <Setter Property="Background" Value="#f5f5f5"/>
        <Setter Property="Foreground" Value="#1e1e1e"/>
    </Style>

    <Style Selector="TabControl">
        <Setter Property="Background" Value="#e8e8e8"/>
    </Style>

    <Style Selector="TabItem">
        <Setter Property="Background" Value="#e8e8e8"/>
        <Setter Property="Foreground" Value="#666666"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="MinHeight" Value="28"/>
    </Style>

    <Style Selector="TabItem:selected">
        <Setter Property="Background" Value="#ffffff"/>
        <Setter Property="Foreground" Value="#1e1e1e"/>
    </Style>

    <Style Selector="TabItem:selected /template/ Border#PART_SelectedPipe">
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Height" Value="2"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background" Value="#0078d4"/>
    </Style>

    <Style Selector="TabItem:pointerover">
        <Setter Property="Background" Value="#d4d4d4"/>
        <Setter Property="Foreground" Value="#1e1e1e"/>
    </Style>

    <Style Selector="ae|TextEditor">
        <Setter Property="Background" Value="#ffffff"/>
        <Setter Property="Foreground" Value="#1e1e1e"/>
        <Setter Property="LineNumbersForeground" Value="#858585"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="ShowLineNumbers" Value="True"/>
        <Setter Property="Padding" Value="8,10,10,10"/>
        <Setter Property="SearchResultsBrush" Value="#FFCC66"/>
    </Style>

    <Style Selector="Button">
        <Setter Property="Background" Value="#e0e0e0"/>
        <Setter Property="Foreground" Value="#1e1e1e"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style Selector="Button /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#e0e0e0"/>
    </Style>

    <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#d0d0d0"/>
    </Style>

    <Style Selector="Button:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#c0c0c0"/>
    </Style>

    <!-- Primary button style (accent color) -->
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="#0078d4"/>
        <Setter Property="Foreground" Value="#ffffff"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="Button.primary /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#0078d4"/>
    </Style>

    <Style Selector="Button.primary:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#1a86d9"/>
    </Style>

    <Style Selector="Button.primary:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#006abc"/>
    </Style>

    <Style Selector="Menu">
        <Setter Property="Background" Value="#f0f0f0"/>
        <Setter Property="Foreground" Value="#1e1e1e"/>
    </Style>

    <Style Selector="MenuItem">
        <Setter Property="Background" Value="#f0f0f0"/>
        <Setter Property="Foreground" Value="#1e1e1e"/>
    </Style>

    <Style Selector="MenuItem:selected /template/ Border#PART_LayoutRoot">
        <Setter Property="Background" Value="#d4d4d4"/>
    </Style>

    <Style Selector="ContextMenu">
        <Setter Property="Background" Value="#f0f0f0"/>
        <Setter Property="BorderBrush" Value="#c8c8c8"/>
    </Style>

    <Style Selector="ScrollBar">
        <Setter Property="Background" Value="#f0f0f0"/>
    </Style>

    <Style Selector="ScrollBar /template/ Thumb">
        <Setter Property="Background" Value="#c8c8c8"/>
    </Style>

    <!-- TextBox styles -->
    <Style Selector="TextBox">
        <Setter Property="Background" Value="#ffffff"/>
        <Setter Property="Foreground" Value="#1e1e1e"/>
        <Setter Property="BorderBrush" Value="#c8c8c8"/>
        <Setter Property="CaretBrush" Value="#1e1e1e"/>
        <Setter Property="SelectionBrush" Value="#ADD6FF"/>
    </Style>

    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="#0078d4"/>
    </Style>

    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="#0078d4"/>
    </Style>

    <!-- CheckBox styles -->
    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="#1e1e1e"/>
    </Style>

    <!-- TextBlock styles -->
    <Style Selector="TextBlock">
        <Setter Property="Foreground" Value="#1e1e1e"/>
    </Style>

    <!-- ListBox styles -->
    <Style Selector="ListBox">
        <Setter Property="Background" Value="#ffffff"/>
        <Setter Property="BorderBrush" Value="#c8c8c8"/>
    </Style>

    <Style Selector="ListBoxItem">
        <Setter Property="Foreground" Value="#1e1e1e"/>
    </Style>

    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="#cce8ff"/>
    </Style>

    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#e8e8e8"/>
    </Style>

    <!-- Separator styles -->
    <Style Selector="Separator">
        <Setter Property="Background" Value="#c8c8c8"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0,4"/>
    </Style>

    <!-- Menu separator specific -->
    <Style Selector="MenuItem > Separator">
        <Setter Property="Background" Value="#d4d4d4"/>
    </Style>

    <Style Selector="ContextMenu Separator">
        <Setter Property="Background" Value="#d4d4d4"/>
    </Style>

    <!-- Label styles -->
    <Style Selector="Label">
        <Setter Property="Foreground" Value="#1e1e1e"/>
    </Style>

    <!-- ContentPresenter text color -->
    <Style Selector="ContentPresenter">
        <Setter Property="Foreground" Value="#1e1e1e"/>
    </Style>

    <!-- TabItem text -->
    <Style Selector="TabItem TextBlock">
        <Setter Property="Foreground" Value="#666666"/>
    </Style>

    <Style Selector="TabItem:selected TextBlock">
        <Setter Property="Foreground" Value="#1e1e1e"/>
    </Style>

    <Style Selector="TabItem:pointerover TextBlock">
        <Setter Property="Foreground" Value="#1e1e1e"/>
    </Style>

    <!-- AvaloniaEdit SearchPanel styles -->
    <Style Selector="avaloniaedit|SearchPanel">
        <Setter Property="Background" Value="#f0f0f0"/>
        <Setter Property="BorderBrush" Value="#c8c8c8"/>
    </Style>

    <!-- Tab Strip ListBox styles -->
    <Style Selector="ListBox#TabStrip">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="ListBox#TabStrip ListBoxItem">
        <Setter Property="Background" Value="{DynamicResource TabItemBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource TabItemText}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style Selector="ListBox#TabStrip ListBoxItem /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource TabItemBackground}"/>
    </Style>

    <Style Selector="ListBox#TabStrip ListBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource TabItemHover}"/>
    </Style>

    <Style Selector="ListBox#TabStrip ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource TabItemSelected}"/>
    </Style>


    <Style Selector="ListBox#TabStrip ListBoxItem:selected TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TabItemSelectedText}"/>
    </Style>

    <Style Selector="ListBox#TabStrip ListBoxItem TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TabItemText}"/>
    </Style>

    <Style Selector="ListBox#TabStrip ListBoxItem:pointerover TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TabItemSelectedText}"/>
    </Style>

    <!-- Ghost Tab Button styles -->
    <Style Selector="Button.ghosttab">
        <Setter Property="Background" Value="{DynamicResource TabItemBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource TabItemText}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style Selector="Button.ghosttab /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource TabItemBackground}"/>
        <Setter Property="CornerRadius" Value="0"/>
    </Style>

    <Style Selector="Button.ghosttab:pointerover">
        <Setter Property="Opacity" Value="0.7"/>
    </Style>

    <Style Selector="Button.ghosttab:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource TabItemHover}"/>
    </Style>
</Styles>

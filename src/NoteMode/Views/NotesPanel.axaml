<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NoteMode.ViewModels"
             x:Class="NoteMode.Views.NotesPanel"
             x:DataType="vm:NotesPanelViewModel">

    <Panel>
    <Border Background="{DynamicResource NotesPanelBackground}"
            BorderBrush="{DynamicResource NotesPanelBorder}"
            BorderThickness="1,1,0,0">
        <DockPanel>
            <!-- Header bar -->
            <Border DockPanel.Dock="Top"
                    Background="{DynamicResource NotesPanelHeaderBackground}"
                    BorderBrush="{DynamicResource NotesPanelBorder}"
                    BorderThickness="0,0,0,1"
                    Padding="10,8">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="NOTES"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource NotesPanelHeaderText}"
                               VerticalAlignment="Center"
                               Opacity="0.7"/>
                    <Button Grid.Column="1"
                            Click="CloseButton_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Width="20" Height="20"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center">
                        <Path Data="M18 6 6 18M6 6l12 12"
                              Stroke="{DynamicResource NotesPanelHeaderText}"
                              StrokeThickness="1.5"
                              StrokeLineCap="Round"
                              Stretch="Uniform"
                              Width="12" Height="12"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Toolbar -->
            <Border DockPanel.Dock="Top" Padding="10,4">
                <Button Click="NewFolder_Click"
                        FontSize="11"
                        Padding="8,3">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <Path Data="M12 10v6M9 13h6M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"
                              Stroke="{DynamicResource NotesPanelHeaderText}"
                              StrokeThickness="1.5"
                              StrokeLineCap="Round"
                              StrokeJoin="Round"
                              Stretch="Uniform"
                              Width="13" Height="13"
                              VerticalAlignment="Center"/>
                        <TextBlock Text="Folder" FontSize="11" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>

            <!-- Tree View -->
            <TreeView x:Name="NotesTree"
                      ItemsSource="{Binding RootItems}"
                      Margin="0,4,0,0"
                      Background="Transparent"
                      BorderThickness="0">
                <TreeView.ItemTemplate>
                    <TreeDataTemplate DataType="vm:NoteTreeItemViewModel"
                                      ItemsSource="{Binding Children}">
                        <Border Padding="2,2"
                                Background="Transparent"
                                Tag="{Binding}"
                                CornerRadius="3"
                                DoubleTapped="TreeItem_DoubleTapped"
                                PointerPressed="TreeItem_PointerPressed"
                                PointerReleased="TreeItem_PointerReleased"
                                Classes.dropTarget="{Binding IsDropTarget}">
                            <Border.ContextMenu>
                                <ContextMenu Tag="{Binding}">
                                    <MenuItem Header="Open"
                                              Tag="{Binding}"
                                              Click="OpenNote_Click"
                                              IsVisible="{Binding !IsFolder}"/>
                                    <MenuItem Header="New Folder"
                                              Tag="{Binding}"
                                              Click="NewSubFolder_Click"
                                              IsVisible="{Binding IsFolder}"/>
                                    <Separator/>
                                    <MenuItem Header="Rename"
                                              Tag="{Binding}"
                                              Click="RenameItem_Click"/>
                                    <MenuItem Header="Delete"
                                              Tag="{Binding}"
                                              Click="DeleteItem_Click"/>
                                </ContextMenu>
                            </Border.ContextMenu>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <!-- Folder icon -->
                                <Path Data="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"
                                      Stroke="{DynamicResource NotesFolderIcon}"
                                      StrokeThickness="1.5"
                                      StrokeLineCap="Round"
                                      StrokeJoin="Round"
                                      Stretch="Uniform"
                                      Width="14" Height="14"
                                      VerticalAlignment="Center"
                                      IsVisible="{Binding IsFolder}"/>
                                <!-- Note icon -->
                                <Path Data="M6 22a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h8a2.4 2.4 0 0 1 1.704.706l3.588 3.588A2.4 2.4 0 0 1 20 8v12a2 2 0 0 1-2 2zM14 2v5a1 1 0 0 0 1 1h5M10 9H8M16 13H8M16 17H8"
                                      Stroke="{DynamicResource NotesNoteIcon}"
                                      StrokeThickness="1.5"
                                      StrokeLineCap="Round"
                                      StrokeJoin="Round"
                                      Stretch="Uniform"
                                      Width="14" Height="14"
                                      VerticalAlignment="Center"
                                      IsVisible="{Binding !IsFolder}"/>
                                <!-- Display name (non-editing) -->
                                <TextBlock Text="{Binding Name}"
                                           FontSize="12"
                                           VerticalAlignment="Center"
                                           IsVisible="{Binding !IsEditing}"/>
                                <!-- Rename textbox (editing) -->
                                <TextBox Text="{Binding EditName}"
                                         FontSize="12"
                                         MinWidth="100"
                                         Padding="2,0"
                                         IsVisible="{Binding IsEditing}"
                                         LostFocus="RenameTextBox_LostFocus"
                                         KeyDown="RenameTextBox_KeyDown"
                                         x:Name="RenameTextBox"/>
                            </StackPanel>
                        </Border>
                    </TreeDataTemplate>
                </TreeView.ItemTemplate>

                <TreeView.Styles>
                    <Style Selector="TreeViewItem" x:DataType="vm:NoteTreeItemViewModel">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                    <Style Selector="Border.dropTarget">
                        <Setter Property="Background" Value="{DynamicResource NotesDropTargetHighlight}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource DragGhostBorder}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                </TreeView.Styles>
            </TreeView>
        </DockPanel>
    </Border>

    <!-- Drag ghost overlay -->
    <Border x:Name="DragGhost"
            IsVisible="False"
            IsHitTestVisible="False"
            Background="{DynamicResource DragGhostBackground}"
            BorderBrush="{DynamicResource DragGhostBorder}"
            BorderThickness="1"
            CornerRadius="3"
            Padding="8,3"
            Opacity="0.9"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
        <TextBlock x:Name="DragGhostText"
                   FontSize="11"
                   Foreground="{DynamicResource DragGhostForeground}"/>
    </Border>
    </Panel>
</UserControl>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="using:Flit.Views"
        x:Class="Flit.Views.FindReplaceDialog"
        x:Name="ThisDialog"
        x:DataType="views:FindReplaceDialog"
        Title="Find and Replace"
        Width="450"
        Height="220"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False">

    <Window.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding #ThisDialog.CloseCommand}" />
        <KeyBinding Gesture="Enter" Command="{Binding #ThisDialog.FindNextCommand}" />
    </Window.KeyBindings>

    <StackPanel Margin="16" Spacing="12">
        <!-- Find Row -->
        <Grid ColumnDefinitions="70,*">
            <TextBlock Text="Find:" VerticalAlignment="Center"/>
            <TextBox x:Name="FindTextBox"
                     Grid.Column="1"
                     TextChanged="FindTextBox_TextChanged"/>
        </Grid>

        <!-- Replace Row -->
        <Grid ColumnDefinitions="70,*">
            <TextBlock Text="Replace:" VerticalAlignment="Center"/>
            <TextBox x:Name="ReplaceTextBox"
                     Grid.Column="1"/>
        </Grid>

        <!-- Options Row -->
        <StackPanel Orientation="Horizontal" Spacing="16">
            <CheckBox x:Name="CaseSensitiveCheckBox"
                      Content="Case sensitive"/>
        </StackPanel>

        <!-- Status -->
        <TextBlock x:Name="StatusText"
                   Foreground="{DynamicResource SecondaryText}"
                   FontSize="11"
                   Text=""/>

        <!-- Buttons Row -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="Find Previous" Click="FindPrevious_Click"/>
            <Button Content="Find Next" Click="FindNext_Click" Classes="primary"/>
            <Button Content="Replace" Click="Replace_Click"/>
            <Button Content="Replace All" Click="ReplaceAll_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
